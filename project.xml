<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="task" package="task" version="1.0.0" company="Pavlo Nikitin" />
	
	<!-- output -->
	<app main="Main" file="task" path="bin" />
	
	<window background="#ffffff" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	<window fullscreen="false" resizable="false" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="feathersui" />
	<haxelib name="starling" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img/1.jpg" rename="img1" />
	<assets path="assets/img/2.jpg" rename="img2" />
	<assets path="assets/img/3.jpg" rename="img3" />
	<assets path="assets/img/4.jpg" rename="img4" />
	<assets path="buttons.xml" rename="buttons.xml" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>